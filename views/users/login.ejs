<% layout("/layouts/boilerplate.ejs") %>
<div class="row ">
    <h1 class="col-6 offset-3 mb-4">Login of Wanderlust</h1>
    <div class="col-6 offset-3">
        <form action="/login" method="post" class="needs-validation" novalidate>
            <div class="mb-3">
                <label class="form-label" for="username">Username</label>
                <input placeholder="enter username" name="username" id="username" class="form-control" required>
                <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="password">Password</label>
                <input placeholder="enter password" name="password" id="password" type="password" class="form-control" required>
                <div class="valid-feedback">Looks good!</div>
            </div>
            <button class="btn btn-dark ">login</button>
        </form>
    </div>
</div>